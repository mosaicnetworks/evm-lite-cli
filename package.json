{
	"name": "evm-lite-cli",
	"version": "1.2.2",
	"main": "dist/index.js",
	"typings": "dist/typings/index.d.ts",
	"license": "MIT",
	"scripts": {
		"danu": "ts-node src/test",
		"lint": "tslint -p . -c ./tslint.json",
		"prepublish": "yarn link && yarn build",
		"clean": "rm -rf node_modules dist package-lock.json bin",
		"build": "yarn lint && tsc -p ./tsconfig.json",
		"build:watch": "npm run build --watch",
		"test": "jest",
		"dev": "yarn install --registry http://192.168.1.15:1234",
		"publish:dev": "yarn publish --no-git-tag-version --message 'dev(publish): private registry' --registry http://192.168.1.15:1234",
		"add:dev": "yarn add --registry http://192.168.1.15:1234",
		"i": "ts-node src/evmlc --datadir ~/Library/MONET i",
		"e": "ts-node src/evmlc --datadir ~/Library/MONET",
		"linkalldev": "yarn link evm-lite-core evm-lite-consensus evm-lite-keystore evm-lite-datadir evm-lite-client evm-lite-utils",
		"pkg": "yarn run build && rm -rf bin && pkg . --out-path ./bin",
		"e2e": "yarn e2e:build && concurrently --kill-others \"yarn e2e:monetd\" \"ts-node e2e/index.ts\"",
		"e2e:build": "monetd --datadir ./e2e/datadir config build e2e --passfile ./e2e/pwd.txt",
		"e2e:monetd": "monetd --datadir ./e2e/datadir run"
	},
	"dependencies": {
		"chalk": "^2.4.2",
		"cli-table": "^0.3.1",
		"figlet": "^1.2.4",
		"inquirer": "^7.0.0",
		"mkdirp": "^0.5.1",
		"npmlog": "^4.1.2",
		"ora": "^3.4.0",
		"vorpal": "^1.12.0"
	},
	"devDependencies": {
		"@types/cli-table": "^0.3.0",
		"@types/figlet": "^1.2.0",
		"@types/inquirer": "^6.5.0",
		"@types/jest": "^24.0.18",
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^12.7.5",
		"@types/npmlog": "^4.1.2",
		"concurrently": "^5.0.0",
		"execa": "^2.1.0",
		"jest": "^24.9.0",
		"ts-jest": "^24.1.0",
		"ts-node": "^8.4.1",
		"tslint": "^5.20.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.6.3"
	},
	"bin": {
		"evmlc": "./dist/evmlc.js"
	},
	"pkg": {
		"assets": [
			"./node_modules/figlet/fonts/Standard.flf"
		],
		"out-path": "./bin"
	}
}
